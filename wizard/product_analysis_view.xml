<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_analysis_view" model="ir.ui.view">
        <field name="name">product.analysis.view</field>
        <field name="model">product.analysis</field>
        <field name="arch" type="xml">
            <form string="Detail">
                <header>
                    <button
                        name="calculate"
                        string="Calculate"
                        type="object"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="date_start" />
                            <field name="date_end" />
                        </group>
                    </group>
                    <field name="product_analysis_detail_ids" mode="tree">
                        <tree string="Detail" >
                            <field name="product_id" />
                            <field name="qty_product" />
                            <field name="product_incomming" />
                            <field name="product_outgoing" />
                            <field name="qty_available" />
                            <field name="qty_return" />
                            <field name="qty_rejected" />
                            <field name="qty_sale" />
                            <field name="qty_total_sale" />
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_stock_kardex">
        <field name="name">Analysis</field>
        <field name="res_model">product.analysis</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
